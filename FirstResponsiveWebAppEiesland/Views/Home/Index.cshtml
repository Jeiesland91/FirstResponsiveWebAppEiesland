@model FirstResponsiveWebAppEiesland.Models.FirstResponsiveModel
@{
    ViewBag.Title = "Age This Year Calculator";
}
<div class="container">
    <header class="jumbotron">
        <h1 class="mt-3">@ViewBag.Title</h1>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    </header>
    <main class="container">
        <form asp-action="Index" method="post">
            <div class="row">
                <label asp-for="UserName" class="control-label col-sm-2">User Name:</label>
                <input asp-for="UserName" class="form-control col-sm-2"/>
                <span asp-validation-for="UserName" class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="YearOfBirth" class="control-label col-sm-2">Year Of Birth:</label>
                <input asp-for="YearOfBirth" class="form-control col-sm-2"/>
                <span asp-validation-for="YearOfBirth" class="text-danger col"></span>
            </div>
            <div class="row">
                <label class="control-label col-sm-2">Age This Year:</label>
                <input value="@ViewBag.Age" readonly class="form-control col-sm-2"/>
            </div>
            <div class="row">
                <div class="col offset-sm-2 pl-0">
                    <button type="submit"
                            class="btn btn-primary">
                        Calculate
                    </button>
                    <a asp-action="Index"
                       class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </form>
    </main>
</div>